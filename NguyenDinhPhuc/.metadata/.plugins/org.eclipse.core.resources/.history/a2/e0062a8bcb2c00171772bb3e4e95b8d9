package TOPIC_2;

import java.io.BufferedReader;
import java.io.InputStream;
import java.io.InputStreamReader;

// 1. Nhập vào một xâu. Tạo ra xâu đảo ngược với xâu đã nhập.

class Ham
{
	String str;

	public String getStr()
	{
		return str;
	}

	public void setStr(String str)
	{
		this.str = str;
	}
}

public class BaiTap_1
{
	void inDaoNguoc(String chuoi)
	{
		chuoi = new String();
		chuoi.concat("ban");
	}
	public static void main(String[] args)
	{
		System.out.println("*********** CHƯƠNG TRÌNH IN CHUỖI NGƯỢC ***********");
		try
		{
			System.out.print("> Nhập chuỗi ký tự : ");
			BufferedReader in = new BufferedReader(new InputStreamReader(System.in));
			String str = in.readLine();			
			System.out.println("-> Chuỗi vừa nhập : "+str);
			
			BaiTap_1 a = new BaiTap_1();
			a.inDaoNguoc(str);
			System.out.print("-> Chuỗi vừa nhập : "+str);
		}
		catch(Exception e)
		{
			
		}
	}

}
